<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_bg">

    <RelativeLayout
        android:id="@+id/title_bar_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_icon"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="@dimen/actionbar_height"
                android:background="@drawable/title_click_bg"
                android:scaleType="centerInside"
                android:src="@drawable/ic_title_back" />

            <TextView
                android:id="@+id/left_text"
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="@dimen/actionbar_height"
                android:background="@drawable/title_click_bg"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_bar_title_normal_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/title_bar_title_spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_bar_title_search_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/title_bar_title_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/white"
                android:maxLength="15"
                android:maxLines="1"
                android:maxWidth="250dp"
                android:minWidth="180dp"
                android:padding="5dp"
                android:textCursorDrawable="@null" />

            <ImageView
                android:id="@+id/title_bar_title_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_title_search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_bar_operator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" />
    </RelativeLayout>
</LinearLayout>